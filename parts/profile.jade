    .ui.two.stackable.cards
        .ui.card
            .content
                +user_credit
        .ui.card
            .content
                +user_orders
        +user_subscriptions   
        +user_addresses
        +user_friends
        +user_bookmarks
        +user_ingredients
        +user_deliveries
        +user_pantry
template(name='user_ingredients')
    .ui.card
        .content
            a.header(href="/user/#{username}/ingredients")
                // +i name='ingredients' cl='ui avatar image'
                i.large.food.icon
                |ingredients
            .ui.small.header 
                |liked ingredients
            each liked_ingredients
                .ui.header #{when}
            each disliked_ingredients
                |disliked ingredients
                .ui.header #{when}
                
                
